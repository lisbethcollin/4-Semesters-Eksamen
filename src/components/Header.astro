---
import { Image } from 'astro:assets';
import logo from "../assets/images/logo.png";
import burgermenu from "../assets/images/burgermenu.svg";
import Button from '../components/Button.astro';
---

<div x-data="{ showmenu: false }" class="header p-4 fixed top-0 left-0 w-full bg-beige-500 z-50" >
    <div id="navbar" class="flex flex-row justify-between items-center md:mx-20">
        <div id="logo" class="">
            <a href="/../index.html"><Image class="w-40" src={logo} alt="Besa Digital logo"/></a>
        </div>
        <div class="flex flex-row gap-12 items-center">
            <nav id="desktopmenu" class="hidden lg:block">
                <ul class="flex flex-row gap-4 text-xl text-darkblue-500 font-albert ">
                    <li class="hover:text-orange-500 hover:underline active:text-blue-500 active:underline"><a href="#">Services</a></li>
                    <li class="hover:text-orange-500 hover:underline active:text-blue-500 active:underline px-12"><a href="/../omos.html">Om os</a></li>
                    <li class="hover:text-orange-500 hover:underline active:text-blue-500 active:underline"><a href="/../cases.html">Cases</a></li>
                    <li class="hover:text-orange-500 hover:underline active:text-blue-500 active:underline pl-12"><a href="#">Blog</a></li>
                </ul>
            </nav>
            <div class="hidden lg:block">
            <Button variant="primary" >Kontakt os</Button>
            </div>
        </div>
        <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"><Image src={burgermenu} alt="burgermenu"/></button>
    </div>
    <nav id="mobilmenu" class="flex flex-col content-center gap-10 pt-11 pb-11 lg:hidden" 
    x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
        <ul class=" text-darkblue-500 font-outfit text-xl px-6">
            <li class="text-left pt-8 pb-2 border-b-2 border-orange-500"><a href="#">Services</a></li>
            <li class="text-left pt-8 pb-2 border-b-2 border-orange-500"><a href="/../omos.html">Om os</a></li>
            <li class="text-left pt-8 pb-2 border-b-2 border-orange-500"><a href="/../cases.html">Cases</a></li>
            <li class="text-left pt-8 pb-2 border-b-2 border-orange-500"><a href="#">Blog</a></li>
        </ul>
        <div class="block lg:hidden self-center">
          <Button variant="primary" >Kontakt os</Button>
        </div>
    </nav>
</div>