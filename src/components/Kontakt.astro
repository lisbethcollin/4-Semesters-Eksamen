---
import Button from '../components/Button.astro';

const { kontaktimg, kontaktalt, kontaktbeskrivelse, personnavn, personbeskrivelse } = Astro.props;
---

<section class="max-w-7xl m-auto">
    <h3 class="font-albert font-bold text-4xl">Gør dine ambitioner <br> til virkelighed</h3>
    
    <div class="grid grid-cols-5 gap-10 pt-4">
        <article class="col-span-2">
            <p class="font-outfit text-xl pb-14">{kontaktbeskrivelse}</p>
            <img src={kontaktimg} alt={kontaktalt}>
            <p class="font-outfit font-semibold pt-3">{personnavn}</p>
            <p class="font-outfit pt-2">{personbeskrivelse}</p>
        </article>
        <article class="col-span-3" >
            <form>
                <div x-data="{ selectedInput: null }">
                    <section class="m-10">
                        <article class="grid grid-cols-2 gap-5">
                            <label for="navn"
                                x-on:click="selectedInput = 1"
                                x-bind:class="selectedInput === 1 ? 'border-b-2 border-b-darkblue-600' : 'hover:border-b-2 hover:border-b-blue-500'"
                                class="block border-b-2 shadow-web border-orange-500 mb-4 text-darkblue-500 font-albert">
                                <p class="font-semibold text-2xl ml-3 mt-2 mb-1">Navn</p>
                                <input type="text" name="navn" placeholder="Anders And" class="block border-none outline-none focus:ring-0 w-full placeholder:italic placeholder:text-darkblue-200 text-darkblue-500 bg-transparent"/></input>
                            </label>
                            <label for="tlf"
                                x-on:click="selectedInput = 2"
                                x-bind:class="selectedInput === 2 ? 'border-b-2 border-b-darkblue-600' : 'hover:border-b-2 hover:border-b-blue-500'"
                                class="block border-b-2 shadow-web border-orange-500 mb-4">
                                <p class="font-semibold text-2xl ml-3 mt-2 mb-1">Telefonnummer</p>
                                    <input type="tel" name="tlf" placeholder="8888 8888" class="block border-none outline-none focus:ring-0 w-full placeholder:italic placeholder:text-darkblue-200 text-darkblue-500 bg-transparent"></input>
                            </label>
                        </article>
                        <label for="email"
                        x-on:click="selectedInput = 3"
                        x-bind:class="selectedInput === 3 ? 'border-b-2 border-b-darkblue-600' : 'hover:border-b-2 hover:border-b-blue-500'"
                        class="block border-b-2 shadow-web border-orange-500 mb-4">
                        <p class="font-semibold text-2xl ml-3 pt-2 mb-1">Email</p>
                            <input type="email" name="email" placeholder="andersand@andeby.dk" class="block border-none outline-none focus:ring-0 w-full placeholder:italic placeholder:text-darkblue-200 text-darkblue-500 bg-transparent"></input>
                        </label>
                        <label for="besked"
                        x-on:click="selectedInput = 4"
                        x-bind:class="selectedInput === 4 ? 'border-b-2 border-b-darkblue-600' : 'hover:border-b-2 hover:border-b-blue-500'"
                        class="grid items-end content-between border-b-2 shadow-web border-orange-500 mb-4 h-32">
                        <p class="font-semibold text-2xl ml-3 mt-2 mb-1">Besked</p>
                            <input type="text" name="besked" height="128" placeholder="Jeg mangler en ny hjemmeside, kan i hjælpe med det?" class="block border-none outline-none focus:ring-0 w-full placeholder:italic placeholder:text-darkblue-200 text-darkblue-500 bg-transparent"></input>
                        </label>
                        <div class="flex justify-end">
                            <Button>Send besked</Button>
                        </div>
                    </section>
                    
                </div>
            </form>
        </article>
    </div>
</section>