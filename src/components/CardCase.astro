
---

---
<section x-data="{ allecases: []}" x-init="allecases = await (await fetch('cases.json')).json();" class="grid md:grid-cols-2 lg:grid-cols-3 gap-12 xl:gap-0 mx-auto px-6 md:px-24 mb-16">
    </ul>
        <template x-for="cases in allecases" :key="cases.id">
            <li class="flex flex-col border-2 border-orange-500 hover:bg-orange-200 rounded-3xl p-6 xl:mb-12 max-w-max"><span><a :href="cases.slug">
                        <div>
                            <img x-bind:src="cases.coverimg" x-bind:alt="cases.coveralt">
                            <h4 x-html="cases.casetitle" class="font-albert font-semibold text-3xl whitespace-pre-wrap pb-6 pt-4"></h4>
                        </div>
                        <ul class="list-disc pl-6 space-y-2">
                            <template x-for="punkt in cases.casepunkt" :key="punkt">
                                <li x-text="punkt" class="font-albert text-sm"></li>
                            </template>
                        </ul>
            </a></span></li>
        </template>
    </ul>
</section>
